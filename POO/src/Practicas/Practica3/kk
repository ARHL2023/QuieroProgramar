for (TipoAutomovil tipo : TipoAutomovil.values()) {
            System.out.println("Tipo de automóvil: " + tipo.getNombreTipoAutomovil());
            System.out.println("Descripción: " + tipo.getDescripcionTipoAutomovil());
            System.out.println("Número de puertas: " + tipo.getNumeroPuertas());
            System.out.println("Precio: $" + tipo.getPrecioTipoAutomovil());
            System.out.println();
        }

        Scanner scanner = new Scanner(System.in);
        System.out.println("Seleccione un tipo de automóvil:");
        System.out.println("1. Sedan");
        System.out.println("2. Station");
        System.out.println("3. Pickup");
        System.out.println("4. Convertible");
        System.out.println("5. Furgón");
        int seleccion = scanner.nextInt();

        // Obtener el tipo de automóvil seleccionado
        TipoAutomovil tipo = null;
        switch (seleccion) {
            case 1:
                tipo = TipoAutomovil.SEDAN;
                break;
            case 2:
                tipo = TipoAutomovil.STATION;
                break;
            case 3:
                tipo = TipoAutomovil.PICKUP;
                break;
            case 4:
                tipo = TipoAutomovil.CONVERTIBLE;
                break;
            case 5:
                tipo = TipoAutomovil.FURGON;
                break;
            default:
                System.out.println("Selección inválida.");
                return;
        }


